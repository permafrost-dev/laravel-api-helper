{
    "name": "permafrost-dev/laravel-api-helper",
    "description": "Helpers trait for Laravel Response or Controllers when implementing APIs.",
    "keywords": [
        "permafrost",
        "apis",
        "api",
        "api response",
        "json api",
        "laravel"
    ],
    "homepage": "https://github.com/permafrost-dev/laravel-api-helper",
    "license": "MIT",
    "authors": [
        {
            "name": "Trick",
            "email": "trick.developer@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "illuminate/http": "5.8.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "dev-master",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Permafrost\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Permafrost\\Api\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "fix": "vendor/bin/php-cs fix src/**/*.php"
    },
    "config": {
        "sort-packages": true
    }
}
